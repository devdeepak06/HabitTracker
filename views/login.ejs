<div class="container ">
    <div class="row py-5 justify-content-center ">
        <div class="col-md-6 text-center bg-warning rounded-lg">
            <h1 class="py-2">Habit Tracker - App</h1>

            <img src="/images/logo.png" alt="" class="img-fluid mb-3">
            <h4 id="login" class="text-dark">Login</h4>
            <form action="/user/createSession" method="post" class="form-group">

                <label for="">Email</label>
                <input type="email" name="email" class="form-control " placeholder="Enter your email">
                <label for="">Password</label>
                <input type="password" name="password" class="form-control mb-4 " placeholder="Enter your password">
                <input type="submit" class="btn btn-success btn-block mb-4 ">Login</input>
            </form>

            <p class="mb-5">New User ?<a href="/user/register">Register</a></p>

        </div>
    </div>
</div>

